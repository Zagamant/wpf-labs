<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WpfApp1">
    <Style x:Key="MainText">
        <Setter Property="Control.HorizontalAlignment" Value="Center" />
        <Setter Property="Control.FontSize" Value="17" />
    </Style>

    <Style x:Key="Tool">
        <Setter Property="Control.HorizontalAlignment" Value="Center" />
        <Setter Property="Control.FontSize" Value="17" />
        <Setter Property="Control.FontStyle" Value="Italic" />
    </Style>

    <Style x:Key="MainButton">
        <Setter Property="Control.Margin" Value="10" />
        <Setter Property="Control.Foreground" Value="White" />
        <Setter Property="Control.FontSize" Value="17" />
        <Setter Property="Control.Background" Value="Transparent" />
        <Setter Property="Control.BorderBrush" Value="Transparent" />
    </Style>

    <Style x:Key="TableQuestion">
        <Setter Property="Control.HorizontalAlignment" Value="Right" />
        <Setter Property="Control.FontSize" Value="15" />
        <Setter Property="Control.FontWeight" Value="Bold" />
    </Style>

    <LinearGradientBrush x:Key="MenuPanel" StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Color="#ccc" Offset="0.0" />
        <GradientStop Color="#333" Offset="1.0" />
    </LinearGradientBrush>
</ResourceDictionary>