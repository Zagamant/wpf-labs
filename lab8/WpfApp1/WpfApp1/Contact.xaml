<Window x:Class="WpfApp1.Contact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="800" Width="1000" MinHeight="700" MinWidth="900">

    <Window.CommandBindings>
        <CommandBinding Command="local:MainWindow.ShowMain" Executed="MainClick"/>
        <CommandBinding Command="local:MainWindow.ShowWork" Executed="WorkClick"/>
        <CommandBinding Command="local:MainWindow.ShowContact" Executed="ContactClick"/>
    </Window.CommandBindings>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Dictionary1.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <ScrollViewer>
            <Grid VerticalAlignment="Top" Margin="20">
                <StackPanel Orientation="Vertical">
                    <DockPanel Background="black">
                        <StackPanel Orientation="Horizontal" Height="Auto">
                            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10,0,10,0" >
                                <TextBlock Foreground="White" Text="KRAVCHIK" FontSize="18"/>
                                <TextBlock Foreground="White" Text="украшения ручной работы" FontSize="14"/>
                            </StackPanel>
                        </StackPanel>
                        <Button DockPanel.Dock="Right" Style="{StaticResource MainButton}" Command="local:MainWindow.ShowContact">Контакты</Button>
                        <Button DockPanel.Dock="Right" Style="{StaticResource MainButton}" Command="local:MainWindow.ShowWork">Каталог</Button>
                        <Button DockPanel.Dock="Right" Style="{StaticResource MainButton}" >Главная</Button>
                        <TextBlock DockPanel.Dock="Right" Width="{Binding ElementName=Logo, Path=Width}" Margin="{Binding ElementName=Logo, Path=Margin}"/>
                    </DockPanel>

                    <DockPanel LastChildFill="True" Margin="20">
                        <Image Source="Images/map.png" DockPanel.Dock="Left" Width="650"/>
                    
                        
                        <StackPanel Margin="20">
                            <TextBlock Text="Магазины" HorizontalAlignment="Right" FontSize="25" FontWeight="Bold"/>
                            
                            <TextBlock Text="Магазин-кофейня Плюш" HorizontalAlignment="Right" FontSize="17" Margin="0,20,0,0"/>
                            <TextBlock Text="просп. Машерова, 12" HorizontalAlignment="Right" FontSize="17"/>
                            <TextBlock Text="instagram.com/plushstore.by" HorizontalAlignment="Right" FontSize="17"/>
                            <TextBlock Text="+375 29 631-26-33" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold" />

                            <TextBlock Text="Магазин MushiShop" HorizontalAlignment="Right" FontSize="17" Margin="0,20,0,0"/>
                            <TextBlock Text="Независимости, 58" HorizontalAlignment="Right" FontSize="17"/>
                            <TextBlock Text="mushishop.by@gmail.com" HorizontalAlignment="Right" FontSize="17"/>
                            <TextBlock Text="+375 25 764-48-06" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold" />

                            <TextBlock Text="Магазин Дом из плюша" HorizontalAlignment="Right" FontSize="17" Margin="0,20,0,0"/>
                            <TextBlock Text="просп. Машерова, 12" HorizontalAlignment="Right" FontSize="17"/>
                            <TextBlock Text="instagram.com/plushstore.by" HorizontalAlignment="Right" FontSize="17"/>
                            <TextBlock Text="+375 29 631-26-33" HorizontalAlignment="Right" FontSize="20" FontWeight="Bold" />


                        </StackPanel>
                        <!--<Grid DockPanel.Dock="Top" Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="12*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="12*"/>
                            </Grid.ColumnDefinitions>

                           </Grid>-->
                    </DockPanel>

                    
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
